        await addDoc(wishlistRef, {
          name: product.name,
          price: product.price,
          addedAt: new Date().toISOString()
        });
        this.showModal('ØªÙ… Ø¨Ù†Ø¬Ø§Ø­', 'ØªÙ…Øª Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ù„Ø¹Ø¨Ø© Ø¥Ù„Ù‰ Ù‚Ø§Ø¦Ù…Ø© Ø§Ù„Ø£Ù…Ù†ÙŠØ§Øª.');
