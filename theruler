  async speakDescription(description: string) {
    if (!description) {
        this.showModal('Ø®Ø·Ø£', 'Ù„Ø§ ÙŠÙˆØ¬Ø¯ ÙˆØµÙ Ù„Ù„Ø§Ø³ØªÙ…Ø§Ø¹ Ø¥Ù„ÙŠÙ‡.');
        return;
    }

