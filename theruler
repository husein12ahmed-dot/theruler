        // --- GEMINI API & TTS FUNCTIONS (Unchanged) ---
        async function generateDescription(gameName, descriptionInputElement) {
            if (!gameName) return showModal('Ø®Ø·Ø£', 'Ø§Ù„Ø±Ø¬Ø§Ø¡ Ø¥Ø¯Ø®Ø§Ù„ Ø§Ø³Ù… Ø§Ù„Ù„Ø¹Ø¨Ø© Ø£ÙˆÙ„Ø§Ù‹.');
