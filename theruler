  async generateImage(gameName: string, imageUrlInput: HTMLInputElement) {
    if (!gameName) {
      this.showModal('Ø®Ø·Ø£', 'Ø§Ù„Ø±Ø¬Ø§Ø¡ Ø¥Ø¯Ø®Ø§Ù„ Ø§Ø³Ù… Ø§Ù„Ù„Ø¹Ø¨Ø© Ø£ÙˆÙ„Ø§Ù‹ Ù„Ø¥Ù†Ø´Ø§Ø¡ ØµÙˆØ±Ø©.');
